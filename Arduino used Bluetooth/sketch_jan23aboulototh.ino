int M_A1 = 2; //motor a = +
int M_A2 = 3; //motor a = -

int M_B1 = 4; //motor b = -
int M_B2 = 5; //motor b = +


char byou;
void setup() 
{
Serial.begin(9600);
pinMode(10, OUTPUT);
pinMode(11, OUTPUT);
pinMode(8, OUTPUT);
pinMode(M_B1, OUTPUT);
pinMode(M_B2, OUTPUT);
pinMode(M_A1, OUTPUT);
pinMode(M_A2, OUTPUT);
}
void loop()
{ 

//sasdasd///moter  speed  
   analogWrite(10,150);
   analogWrite(11,150);

//   forword();
////////
  if(Serial.available())
  {
    byou=Serial.read();
    Serial.print(byou);
    switch(byou)
    {
      case 'w':
         forword();
         delay(500);
         byou=0;
         break;
     case 's':
         back();
         delay(500);
         byou=0;
         break;
     case 'd':
         turnRight();
         delay(250);
         byou=0;
         break;
     case 'a':
         turnLeft();
         delay(250);
         byou=0;
         break;
     case 'z':
         tone(8,1000,500);
         byou=0;
         break; 
     case 'x':
         tone(8,500,500);
         byou=0;
         break; 
     case 'c':
         tone(8,100,500);
         byou=0;
         break; 
     case 'v':
         tone(8,10,500);
         byou=0;
         break;
      default:
        Stop();
        break;
      }
    }
    
Stop();
}




void forword(){
digitalWrite(M_A1, HIGH);
digitalWrite(M_A2,LOW );
digitalWrite(M_B1, LOW);
digitalWrite(M_B2,HIGH );  
}
void back(){
digitalWrite(M_A1, LOW);
digitalWrite(M_A2,HIGH );
digitalWrite(M_B1, HIGH);
digitalWrite(M_B2,LOW );  
}

void turnRight(){
digitalWrite(M_A1, LOW);
digitalWrite(M_A2, HIGH);
digitalWrite(M_B1, LOW);
digitalWrite(M_B2, HIGH);  
}

void turnLeft(){
digitalWrite(M_A1, HIGH);
digitalWrite(M_A2,LOW );
digitalWrite(M_B1, HIGH);
digitalWrite(M_B2, LOW);
}

void Stop(){
digitalWrite(M_A1, LOW);
digitalWrite(M_A2, LOW);
digitalWrite(M_B1, LOW);
digitalWrite(M_B2, LOW);
}
